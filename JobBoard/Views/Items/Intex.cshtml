@using JobBoard.Models;

<h1>Jobs List</h1>
@if (Model.Count == 0)
    {
    <p>There are no jobs in the list.</p>
    }
<ul>
  @foreach (Job jobs in Model)
  {
    <li> Job Title: @job.Title</li> 
    <li>Price: @job.Description</li>
    <li>Miles: @job.Contact</li>
    <p>==================================</p>
  }
</ul>
<a href="/jobs/new">Add a Job</a>