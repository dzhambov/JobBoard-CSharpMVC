@using JobBoard.Models;

<h1>Jobs List</h1>
@if (Model.Count == 0)
    {
    <p>There are no jobs in the list.</p>
    }
<ul>
  @foreach (Job jobs in Model)
  {
    <li> Job Title: @jobs.Title</li> 
    <li>Job Description: @jobs.Description</li>
    <li>Contact #: @jobs.Contact</li>
    <p>==================================</p>
  }
</ul>
<a href="/jobs/new">Add a Job</a>